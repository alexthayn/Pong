<Window x:Class="Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Canvas Width="500" Height="500" Name="GameCanvas" Background="Honeydew">

        <Rectangle Height="20" Width="80" Fill="Blue" 
                       Canvas.Left="210" 
                       Canvas.Top="0"
                       Name="TopPaddle">
        </Rectangle>
        
        <Rectangle Height="20" Width="80" Fill="Red" 
                   Canvas.Bottom="0"
                   Canvas.Left="210"
                   Name="BottomPaddle"></Rectangle>
        <Ellipse Width="20" Height="20" Fill="Black" 
                 Canvas.Top="{Binding Y}" 
                 Canvas.Left="{Binding X}"
                 Name="Ball"></Ellipse>

    </Canvas>
    
</Window>
